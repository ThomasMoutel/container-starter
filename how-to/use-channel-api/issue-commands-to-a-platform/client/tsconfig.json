{
	"compilerOptions": {
		"target": "es2021",
		"module": "ES2020",
		"sourceMap": true,
		"rootDir": "./src",
		"outDir": "build",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"ignoreDeprecations": "5.0",
		"importsNotUsedAsValues": "error",
		"moduleResolution": "node",
		"types": ["../../../common/types/fin"]
	},
	"include": ["./src/**/*.ts"]
}
